<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Hello There</title>

    <style>
      .responsive{
        width: 100%;
        height:auto;
      }
      .banner{
        background: url(https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQPyo0lToWB8HORZx6e5bi5YmWno_okwnOTBQ&usqp=CAU);
        background-size: cover;
        background-position: center;
        /* min-height: 1000px; */
        height:400px
        }
    </style>
  </head>

  <body>

    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo" style="margin-left:10px">PraizyBlog</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="sass.html">About</a></li>
          <li><a href="badges.html">Adverts Here</a></li>
          <li><a href="collapsible.html">Trending Posts</a></li>
        </ul>
      </div>
    </nav>
    <div class="banner">

    </div>
    <section class="container section scrollspy" id="photos">
      <div class="row">
        <% posts.forEach(function(post) { %>
          <div class="col s12 l5">
            <div class="row">
              <div class="col s12 m12">
                <div class="card">
                  <div class="card-image">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQpOE8ceTPRKD7D2h4ACvr3NkMCcV2ntDaK3g&usqp=CAU">
                    <!-- <span class="card-title"><%= post.subject %></span> -->
                    <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                  </div>
                  <div class="card-content">
                    <h5><%= post.subject %></h5>
                    <p><%= post.body %></p>
                  </div>
                </div>
              </div>
            </div>
           
          </div>
        <% }); %> 
          
      </div>
    </section>

    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>